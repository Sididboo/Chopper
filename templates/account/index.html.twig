{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}

{% block content %}

    <div class="top-detail">
            <h2>My account</h2>
        <br>
            <p>Welcome <b> {{ app.user.firstname }} </b> in your account !</p>
        <br />
    </div>
