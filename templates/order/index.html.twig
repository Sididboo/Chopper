{% extends 'base.html.twig' %}

{% block title %}Your Order{% endblock %}

{% block content %}

    <h2>My order</h2>
    <p>Choose your preference for the order</p>
    <div class="row">
        <div class="col-md-6">
            {% set formHtml %}
                {{ form_start(form, {action:path('order_resume')}) }}
                    {{ form_label(form.addresses, ' Choose your delivery address') }}
                <a href="{{ path('account_address_add') }}">Add a new address</a>
                {{ form_end(form) }}
            {% endset %}
            {{ formHtml|replace({'[br]' : '<br>'})| raw }}

        </div>
        <div class="col-md-6">
            <b>Resume</b>
            {% for product in cart %}
<div class="row">
    <div class="col-2">
        <img src="/uploads/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="70px">
    </div>
    <div class="col-8">
        {{ product.product.name }}<br/>
        <small>{{ product.product.subtitle }}</small>
    </div>
    <div class="col-2 my-auto">
        x {{ product.quantity }}
    </div>
</div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
